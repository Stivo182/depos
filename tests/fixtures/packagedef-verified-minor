Процедура ПередСборкой(РабочийКаталог) Экспорт

КонецПроцедуры

Описание.Имя("mypackage")
    .Версия("1.0.0")
    .Автор("Имя Фамилия")
    .АдресАвтора("https://github.com/user")
    .Описание("Описание пакета")
    .ВерсияСреды("1.9.3")
    .ВключитьФайл("docs")
    .ВключитьФайл("packagedef")
    .ВключитьФайл("package-loader.os")
    .ВключитьФайл("README.md")
    .ВключитьФайл("LICENSE")
    .ЗависитОт("delegate", "1.0.0")
    .ЗависитОт("annotations", "1.3.1")
    .ЗависитОт("asserts")
    .ЗависитОт("packageinfo", "0.8")
    .ЗависитОт(
      "autumn", 
      
      "3.2.0", 
      "4.4.1"
    )
    .РазработкаЗависитОт("1testrunner", "1.9.2")
    .ЗависитОт("semver", "1.0.0", "1.1.0")